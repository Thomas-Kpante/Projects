@model LabMVC.Models.OrderVO

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Confirmation</title>
</head>
<body>
    <h1>Order Confirmation</h1>

    <div>
        <h2>Order Details</h2>
        <p><strong>Order ID:</strong> @Model.OrderID</p>
        <p><strong>Order Date:</strong> @Model.OrderDate</p>
        <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
        <p><strong>Total Amount:</strong> $@Model.TotalAmount</p>
    </div>

    <div>
        <h2>Client Details</h2>
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>

    <div>
        <h2>Order Items</h2>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>$@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>$@(item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

   

</body>
</html>
